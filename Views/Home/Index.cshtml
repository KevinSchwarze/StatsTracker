<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Stats Tracker</title>
    <style>
      body {
    background: url('/img/baseballfield.png') no-repeat center center fixed;
    background-size: cover;
    font-family: 'Arial', sans-serif;
    color: white;
    margin: 0;
    padding: 0;
    height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
}



        .nav-bar {
            background: rgba(0, 0, 0, 0.7);
            padding: 15px;
            display: flex;
            justify-content: space-around;
            align-items: center;
            width: 100%;
        }

            .nav-bar a {
                color: white;
                text-decoration: none;
                font-size: 18px;
                padding: 10px 20px;
                transition: background 0.3s;
            }

                .nav-bar a:hover {
                    background: rgba(255, 255, 255, 0.2);
                    border-radius: 5px;
                }

        .title {
            text-align: center;
            margin: 0;
            font-size: 185px;
            color: #355e3b; 
            text-shadow: 2px 2px 5px silver;
            display: inline-block;
            white-space: nowrap;
        }

            .title span {
                display: inline-block;
                animation: wave 1.5s ease-in-out forwards;
                animation-delay: calc(var(--i) * 0.1s);
                text-align: center;
                font-weight: bold;
                color: #013220;
                text-shadow: 2px 2px 5px silver; /* Text shadow for the outline effect */
                margin: 0 2px; /* Space between the letters */
            }

        @@keyframes wave {
            0% {
                transform: scale(1);
            }

            50% {
                transform: scale(1.5);
            }

            100% {
                transform: scale(1);
            }
        }

        .footer {
            background: rgba(0, 0, 0, 0.7);
            padding: 20px;
            position: fixed;
            bottom: 0;
            width: 100%;
            text-align: center;
            color: white;
        }

            .footer img {
                width: 100%;
                height: auto;
                display: block;
                margin-top: 10px;
            }
    </style>
</head>
<body>
    <div class="nav-bar">

        @Html.ActionLink("Add Games", "Index", "Add", null, new { @class = "nav-link" })
        @Html.ActionLink("Review Stats", "Index", "Review", null, new { @class = "nav-link" })
      @*  <a href="/add-player">Add Player</a>*@
    </div>

    <h1 class="title" id="animatedTitle"></h1>

    <div class="footer">
        <p>&copy; 2025 Stats Tracker. All rights reserved.</p>
        <img src="https://example.com/footer-image.jpg" alt="Footer Image">
    </div>

    <script>
        const titleElement = document.getElementById('animatedTitle');
        const titleText = "Stats Tracker";

        // Wrap each letter in a <span> with a custom delay for the wave animation
        titleElement.innerHTML = [...titleText].map((char, i) =>
            `<span style="--i:${i}">${char}</span>`
        ).join('');
    </script>
</body>
</html>

